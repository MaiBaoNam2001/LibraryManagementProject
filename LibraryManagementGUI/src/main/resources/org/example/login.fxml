               <children>
                  <ImageView fitHeight="356.0" fitWidth="300.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/login.jpg" />
                     </image>
                  </ImageView>
